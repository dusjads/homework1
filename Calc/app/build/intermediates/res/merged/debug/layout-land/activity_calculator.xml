<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    >

    <TableRow android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/_expr"
            android:id="@+id/expr"
            android:layout_span="4" />
    </TableRow>

    <TableRow
        >

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/result"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:gravity="right|center"
            android:layout_span="3" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_clear"
            android:id="@+id/clear"
            android:layout_span="0"
            android:layout_column="0"
            android:layout_weight="0"
            android:onClick="onClickListenerClear"/>
    </TableRow>

    <TableRow
        >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_7"
            android:id="@+id/d7"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_8"
            android:id="@+id/d8"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_9"
            android:id="@+id/d9"
            android:onClick="onClickListener9"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_div"
            android:id="@+id/div"
            />

    </TableRow>

    <TableRow
        >
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_4"
            android:id="@+id/d4"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_5"
            android:id="@+id/d5"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_6"
            android:id="@+id/d6"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_mul"
            android:id="@+id/mul"
            />
    </TableRow>

    <TableRow
        >
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_1"
            android:id="@+id/d1"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_2"
            android:id="@+id/d2"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_3"
            android:id="@+id/d3"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_sub"
            android:id="@+id/sub"
            />
    </TableRow>

    <TableRow
        >
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_point"
            android:id="@+id/point"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_0"
            android:id="@+id/d0"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_eqv"
            android:id="@+id/eqv"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/_add"
            android:id="@+id/add"
            />
    </TableRow>

</TableLayout>